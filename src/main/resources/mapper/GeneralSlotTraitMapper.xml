<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.GeneralSlotTraitMapper">

    <select id="findBySlotIds" resultType="java.util.HashMap">
        SELECT slot_id AS slotId, trait_type AS traitType, trait_value AS traitValue
        FROM general_slot_trait
        WHERE slot_id IN
        <foreach collection="slotIds" item="sid" open="(" separator="," close=")">
            #{sid}
        </foreach>
        ORDER BY slot_id, id
    </select>

</mapper>
