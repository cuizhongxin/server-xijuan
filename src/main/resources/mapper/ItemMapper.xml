<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencent.wxcloudrun.dao.ItemMapper">
    
    <resultMap id="ItemResultMap" type="com.tencent.wxcloudrun.model.Item">
        <id property="itemId" column="item_id"/>
        <result property="itemName" column="item_name"/>
        <result property="quality" column="quality"/>
    </resultMap>
    
    <select id="findById" resultMap="ItemResultMap">
        SELECT item_id, item_name, quality
        FROM item
        WHERE item_id = #{itemId}
    </select>
    
    <select id="findAll" resultMap="ItemResultMap">
        SELECT item_id, item_name, quality
        FROM item
        ORDER BY item_id ASC
    </select>
    
</mapper>
